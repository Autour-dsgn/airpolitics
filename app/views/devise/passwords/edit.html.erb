<div class="container">
  <div class="form">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h3 id="formtitle"><h3><strong>Changez votre mot de passe</strong></h3>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password,
                        label: "Nouveau mot de passe", placeholder: '••••••••••',
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmez votre nouveau mot de passe", placeholder: '••••••••••',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-primary" %>
          </div>
          <br>
        <% end %>
        <%= render "devise/shared/links" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
